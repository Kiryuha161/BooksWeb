@using BooksWeb.Models.Domain

@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container py-2">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Список категорий</h2>
        </div>
        <div class="col-6 text-end mb-4">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Создать новую категорию</a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width: 55%" class="text-bg-secondary">
                    Название категории
                </th>
                <th style="width:10%" class="text-bg-secondary">
                    Номер категории
                </th>
                <th style="width:20%"class="text-bg-secondary">
                    Дата создания категории
                </th>
                <th style="width:25%"class="text-bg-secondary">
                    Редактирование
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td class="text-light">@obj.Name</td>
                    <td class="text-light">@obj.DisplayOrder</td>
                    <td class="text-light">@obj.CreatedDateCategory</td>
                    <td class="w-100 btn-group" role="group"><a asp-asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary "><i class="bi bi-pencil-square "></i>&nbsp;&nbsp;&nbsp; Редактировать</a></td>
                </tr>
            }
        </tbody> 
    </table>
</div>